<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Profile image url:</strong>
  <img src="<%= @user.profile_image_link%>" alt="">
</p>



<p>
  <strong>Current employer:</strong>
  <%= @user.current_employer %>
</p>

<p>
  <strong>Current title:</strong>
  <%= @user.current_title %>
</p>

<p>
  <strong>City:</strong>
  <%= @user.location %>
</p>



<%= link_to 'Delete My Account',  "/users/profile",
    data: { confirm: 'Are you sure?' }, method: :delete, remote: true %>


<%= form_for Cohort.new(), url: "/cohorts", remote: true,  html: {class: "create-cohort"} do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.label :start_date%>
  <%= f.date_field :start_date%>
  <%= f.label :end_date%>
  <%= f.date_field :end_date%>
  <%= f.label :description%>
  <%= f.text_field :description%>

  <%= f.submit "save cohort"%>
<%end%>

