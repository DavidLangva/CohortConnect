<button class="button text-uppercase" data-toggle="modal" data-target="#inviteModal" data-whatever="@mdo">Invite to Cohort</button>



<div class="modal fade" id="inviteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Invite</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for GroupInvitation.new(), url: "/invites", remote: true,  html: {class: "create-cohort"} do |f| %>
        <%= f.text_area :emails%>
        <%= f.hidden_field :group_id, value: @cohort_id%>
        <%= f.hidden_field :sent_by_id, value: current_user.id%>
      </div>
      <div class="modal-footer">
        <%= f.submit "Invite" , class: "button text-uppercase"%>
      </div>
        <% end %>
    </div>
  </div>
</div>